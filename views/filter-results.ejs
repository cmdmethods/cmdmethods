<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('includes/head'); %>
</head>

<body>
    <%- include('includes/header'); %>


        <main class="grid">
            <% cardlist.forEach(function(card){ %>
                <section class="card grid-item <%= card.strategy%>" id="<%= card.id%>">
                    <a href="/cards/<%= card.strategy%>/<%= card.id%>">
                        <header>
                            <img class="logo" src="/img/logo-<%= card.strategy%>.png" alt="logo <%= card.strategy%>">
                            <h1>
                                <%= card.name%>
                            </h1>
                        </header>
                        <img src="<%= card.image %>" alt="<%= card.name%>" width="<%= card.width %>"
                            height="<%= card.height %>">
                        <h2>Why?</h2>
                        <p><%- card.why %></p>
                    </a>
                    <a class="button call-to-action" href="/cards/<%= card.strategy%>/<%= card.id%>">More
                        info</a>
                </section>
                <% }); %>
        </main>

        <%- include('includes/footer'); %>

</body>

</html>